// This file is automatically generated by Keystone, do not modify it manually.
// Modify your Keystone config when you want to change this.

datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String    @id @default(cuid())
  name     String    @default("")
  email    String    @unique @default("")
  password String
  projects Project[] @relation("Project_author")
}

model SocialMediaConfig {
  id        String @id @default(cuid())
  instagram String @default("")
  facebook  String @default("")
  linkedin  String @default("")
  twitter   String @default("")
}

model WebsiteConfig {
  id          String  @id @default(cuid())
  url         String  @default("")
  title       String  @default("")
  keywords    String  @default("")
  description String  @default("")
  theme       String  @default("")
  footer_text String  @default("")
  sidebarLogo String?
  image       String?
}

model Project {
  id          String     @id @default(cuid())
  thumbnail   String?
  title       String     @default("")
  permalink   String     @default("")
  keywords    String     @default("")
  description String     @default("")
  publishDate DateTime?
  author      User?      @relation("Project_author", fields: [authorId], references: [id])
  authorId    String?    @map("author")
  categories  Category[] @relation("Category_projects")
  images      Image[]    @relation("Image_projects")
  panoramas   Panorama[] @relation("Panorama_projects")

  @@index([authorId])
}

model Image {
  id       String    @id @default(cuid())
  image    String?
  projects Project[] @relation("Image_projects")
}

model Panorama {
  id       String    @id @default(cuid())
  image    String?
  projects Project[] @relation("Panorama_projects")
}

model Category {
  id       String    @id @default(cuid())
  name     String    @default("")
  projects Project[] @relation("Category_projects")
}